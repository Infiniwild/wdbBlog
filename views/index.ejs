<% include partials/header %>
<div class="hero-foot">
    <div class="tabs is-boxed">
        <div class="container">
            <ul>
                <li class="is-active">
                    <a href="/">Blog</a>
                </li>
                <li class="">
                    <a href="/blog/new">New</a>
                </li>
            </ul>
        </div>
    </div>
</div>
</header>
<section class="section">
    <main class="container">
        <div class="columns is-centered">
            <section class="column is-three-quarters">
                <% blogs.forEach(function(blogPost){ %>
                    <article class="media">
                        <figure class="media-left">
                            <p class="image is-64x64">
                                <img src="<%= blogPost.image %>" alt="Blogpost photo">
                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    <strong><%= blogPost.title %></strong> <small> - <%= blogPost.postCreated.toDateString() %></small>
                                    <br>
                                    <%= blogPost.body.slice(0, 200) %> <% if(blogPost.body.length > 200){ %>...<% } %>
                                </p>
                                <a href="/blog/<%= blogPost._id %>" class="button is-link is-right">More Info</a>
                            </div>
                        </div>
                    </article>
                <% }); %>
            </section>
        </div>
    </main>
</section>
<% include partials/footer %>