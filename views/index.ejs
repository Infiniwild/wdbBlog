<% include partials/header %>
<header class="hero is-primary is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Not much to see here yet
      </h1>
      <h2 class="subtitle">
        One day soon this will show the blog posts that have been made.
      </h2>
    </div>
  </div>
</header>
<main class="container">
  <div class="columns is-centered">
    <section class="column is-three-quarters">
        <% blogs.forEach(function(blogPost){ %>
      <article class="card">
        <div class="card-image">
          <figure class="image">
            <img src="<%= blogPost.image %>" alt="Photos of the city">
          </figure>
        </div>
        <div class="card-header">
          <div class="card-header-title">
            <%= blogPost.title %>
          </div>
        </div>
        <div class="card-content">
          <div class="content">
            <%= blogPost.body %>
          </div>
        </div>
        <div class="card-footer level">
                <div class="level-left">
                    <div class="level-item">
                        <p class="button is-light is-static"><%= blogPost.postCreated %></p>
                    </div>
                </div>
            <div class="level-right">
                <div class="level-item">
                    <a href="" class="button is-warning">Edit</a>
                </div>
                <div class="level-item">
                    <a href="" class="button is-danger">Delete</a>
                </div>
            </div>
        </div>
      </article>
      <% }); %>
    </section>
  </div>
</main>
<% include partials/footer %>