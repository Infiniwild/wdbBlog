<% include partials/header %>
<div class="hero-foot">
  <div class="tabs is-boxed">
      <div class="container">
          <ul>
              <li class="">
                  <a href="/">Blog</a>
              </li>
              <li class="is-active">
                  <a href="/blog/new">New</a>
              </li>
          </ul>
      </div>
  </div>
</div>
</header>
<section class="section">
  <main class="container">
    <div class="columns is-centered">
      <section class="column is-three-quarters">
        <div class="box">
          <form action="/blog" method="POST">
            <div class="field">
              <label class="label">Title</label>
              <div class="control">
                <input class="input" type="text" placeholder="Blog title" name="blog[title]" required>
              </div>
            </div>
            <div class="field">
              <label class="label">Image URL</label>
              <div class="control">
                <input class="input" type="text" placeholder="Blog image" name="blog[image]">
              </div>
            </div>
            <div class="field">
              <label class="label">Post</label>
              <div class="control">
                <textarea class="textarea" placeholder="Content for the blog post" name="blog[body]" required></textarea>
              </div>
            </div>
            <div class="control">
              <button class="button is-primary is-medium">Submit</button>
            </div>
          </form>
        </div>
      </section>
    </div>
  </main>
</section>
<% include partials/footer %>
