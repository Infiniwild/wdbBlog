<% include partials/header %>
<div class="hero-foot">
    <div class="tabs is-boxed">
        <div class="container">
            <ul>
                <li class="">
                    <a href="/">Blog</a>
                </li>
                <li class="">
                    <a href="/blog/new">New</a>
                </li>
            </ul>
        </div>
    </div>
</div>
</header>
<section class="section">
    <main class="container">
        <div class="columns is-centered">
            <div class="column is-three-quarters">
                <article class="card">
                    <div class="card-image">
                        <figure class="image">
                            <img src="<%= blog.image %>" alt="Blog post image">
                        </figure>
                    </div>
                    <div class="card-header">
                        <div class="card-header-title">
                            <%= blog.title %>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="content">
                            <%= blog.body %>
                        </div>
                    </div>
                    <div class="level">
                        <div class="level-left">
                            <div class="level-item">
                                <button class="button is-light is-static">
                                    <%= blog.postCreated.toDateString() %>
                                </button>
                            </div>
                        </div>
                        <div class="level-right">
                            <div class="level-item">
                                <div class="buttons">
                                    <a href="/blog/<%= blog._id %>/edit" class="button is-warning">Edit</a>
                                    <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
                                        <button class="button is-danger is-outlined">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </main>
</section>
<% include partials/footer %>